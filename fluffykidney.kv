#:kivy 1.9.1
#:include RecipePane.kv
#:include MealPlanEditor.kv

<MainMenuScreen>:
	BoxLayout:
		BoxLayout:
			orientation: 'vertical'
			size_hint: (0.3,1)
			Button:
				text: "This Week"
				on_release: root.openMealPlan()
			Button:
				text: "Meal Plan Editor"
				on_release: root.openMealPlanEditor()
			Button:
				text: "Recipe Search"
			Button:
				text: "Settings"
			Button:
				text: "Close"
				on_release: app.stop()
		BoxLayout:
			size_hint: (0.7,1)

