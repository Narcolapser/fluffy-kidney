#:kivy 1.9.1


<FluffyKidney>:
	canvas:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			size: 20,self.height
			pos: 290,0
	cols: 2
	ScrollView:
		size_hint_x: None
		width: 300
		GridLayout
			id: recipe_list
			cols: 1
			size_hint_y:None
			height: self.minimum_height
	GridLayout:
		id: info_grid
		cols:1

<ListRecipe>:
	size_hint_y: None
	size_hint_x: None
	height: 60
	width: 290
	on_release: root.selected()
	text: root.name

<FluffyRecipe>:
	
<RecipePane>:
	canvas:
		Color:
			rgba: 0.7,0.7,0.7,1
		Rectangle:
			size: self.size
			pos: self.pos
		Color:
			rgba: 0.5,0.5,0.5,1
		Rectangle:
			size: self.size[0] - 20, self.size[1] - 20
			pos: self.pos[0] + 10, self.pos[1] + 10
	size_hint_x: 1


<RecipeOverview>:
	grid: contents
	GridLayout:
		id: contents
		cols: 1
		size_hint_y: None
		height: self.minimum_height
		Label:
			text: root.name

<RecipeIngredients>:
	grid: contents
	GridLayout:
		id: contents
		cols: 1
		size_hint_y: None
		height: self.minimum_height
		Label:
			text: root.name

<RecipeSteps>:
	grid: contents
	width_p: self.size[0]
	GridLayout:
		id: contents
		cols: 1
		size_hint_y: None
		height: self.minimum_height
		Label:
			text_size: self.width - 20, None
			text: root.name
