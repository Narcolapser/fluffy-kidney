<MealPlanScreen>:
	GridLayout:
		canvas:
			Color:
				rgba: 1,1,1,1
			Rectangle:
				size: 20,self.height
				pos: self.width*(0.231),0
		cols: 2
		BoxLayout:
			orientation: 'vertical'
			size_hint: (0.3,1)
			ScrollView:
				GridLayout:
					id: recipe_list
					cols: 1
					size_hint_y:None
					height: self.minimum_height
			BoxLayout:
				height: 50
				size_hint_y: None
				Button:
					text: "Back"
					on_release: root.openMainMenu()
		GridLayout:
			id: info_grid
			cols:1

<ListRecipe>:
	size_hint_y: None
	size_hint_x: 1
	height: 60
	on_release: root.selected()
	text: root.name

<FluffyRecipe>:
	
<RecipePane>:
	canvas:
		Color:
			rgba: 0.7,0.7,0.7,1
		Rectangle:
			size: self.size
			pos: self.pos
		Color:
			rgba: 0.5,0.5,0.5,1
		Rectangle:
			size: self.size[0] - 20, self.size[1] - 20
			pos: self.pos[0] + 10, self.pos[1] + 10
	size_hint_x: 1

<RecipeOverview>:
	grid: contents
	GridLayout:
		id: contents
		cols: 1
		size_hint_y: None
		height: self.minimum_height
		Label:
			text: root.name
		RecipePicture:
#			source: 'http://images.media-allrecipes.com/userphotos/560x315/457170.jpg'

<RecipePicture>:
	canvas:
		Color:
			rgb: (1, 1, 1)
		Rectangle:
			texture: self.texture
			size: self.texture_size
			pos: self.x-10, self.y-self.texture_size[1]-50

<RecipeIngredients>:
	grid: contents
	GridLayout:
		id: contents
		cols: 1
		size_hint_y: None
		height: self.minimum_height
		Label:
			size_hint_y: None
			text_size: self.width - 20, None
			height: self.texture_size[1]
			halign: 'center'
			text: root.name

<RecipeIngredient>:
	size_hint_y: None
	Label:
		text: root.quantity
		size_hint_x: 0.1
		halign: 'left'
		text_size: self.width - 20, None
	Label:
		text: root.units
		size_hint_x: 0.2
		halign: 'left'
		text_size: self.width - 20, None
	Label:
		text: root.name
		size_hint_x: 0.7
		halign: 'left'
		text_size: self.width - 20, None



<RecipeSteps>:
	grid: contents
	width_p: self.width
	GridLayout:
		id: contents
		cols: 1
		size_hint_y: None
		height: self.minimum_height
		Label:
			size_hint_y: None
			text_size: self.width - 20, None
			height: self.texture_size[1]
			halign: 'center'
			text: root.name

<RecipeStep>:
	size_hint_y: None
	text_size: self.width - 20, None
	height: self.texture_size[1] + 20
